<section id="page_content">
    <div class="container-fluid">

		<div class="desktop-medium">
			<div class="col-sm-12 col-md-4 col-md-offset-4 text-center">
		        <h1>Programa</h1>
		        <hr/>
			</div>

			<div class = "row desktop-only" id="timeline-container">
				
				<div class="col-md-6 col-xs-12">
					<div class="timeline-title">
				        <h2>Dia 1</h2>
				        <h4>12-05-2017</h4>
					</div>
					<%= yield :timeline_day1 %>
				</div>


				<div class="col-md-6 col-xs-12">
					<div class="timeline-title">
					    <h2>Dia 2</h2>
					    <h4>13-05-2017</h4>
					</div>
					<%= yield :timeline_day2 %>
				</div> 

			</div>
		</div>

		<div class="mobile-medium">

			<div class="text-center">
			<div class="btn-group" data-toggle="buttons" id="timeline-day-selecter">
		      <label class="btn btn-large btn-default active" >
		        <input type="radio" name="program-day-selector" value="day1" id="day1-selector" checked>
		        <h3>Dia 1</h3>
						<h5>12-05-2017</h5>
		      </label>
		      <label class="btn btn-large btn-default">
		        <input type="radio" name="program-day-selector" value="day2" id="day2-selector">
		        	<h3>Dia 2</h3>
					<h5>13-05-2017</h5>
		      </label>
			</div>
			</div>

			<div class="text-center">

			</div>

			<div class = "row timeline-container" id="timeline-container-day1">
				<%= yield :timeline_day1 %>
			</div>

			<div class = "row timeline-container" hidden id="timeline-container-day2">
				<%= yield :timeline_day2 %>
			</div>
		</div>

    </div>
</section>

<script type="text/javascript">
	document.addEventListener("turbolinks:load", function() {
	    $('input[type=radio][name=program-day-selector]').change(function() {
	        if (this.value == 'day1') {
	            $("#timeline-container-day1").show();
	            $("#timeline-container-day2").hide();
	        }
	        else if (this.value == 'day2') {
	            $("#timeline-container-day2").show();
	            $("#timeline-container-day1").hide();
	        }
	    });
	});
</script>